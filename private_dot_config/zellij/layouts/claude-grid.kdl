layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="Claude Code" focus=true {
        pane split_direction="vertical" {
            // 上段: 2x2グリッド
            pane size="70%" split_direction="horizontal" {
                pane size="50%" name="Pane 1" focus=true
                pane size="50%" name="Pane 2"
            }
            pane size="70%" split_direction="horizontal" {
                pane size="50%" name="Pane 3"
                pane size="50%" name="Pane 4"
            }

            // 下段: フッター
            pane size="30%" name="Pane 5 (Logs)"
        }
    }
}

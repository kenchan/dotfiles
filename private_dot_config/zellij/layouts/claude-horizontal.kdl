layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=1 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="Claude Code" focus=true {
        pane split_direction="vertical" {
            // 上段: 3つ横並び
            pane size="60%" split_direction="horizontal" {
                pane size="33%" name="Pane 1" focus=true
                pane size="33%" name="Pane 2"
                pane size="34%" name="Pane 3"
            }

            // 下段: 2つ横並び
            pane size="40%" split_direction="horizontal" {
                pane size="50%" name="Pane 4"
                pane size="50%" name="Pane 5"
            }
        }
    }
}

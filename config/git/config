[user]
	email = kenichi.taka@gmail.com
	name = Kenichi Takahashi
[color]
	ui = auto
[alias]
	co = switch
	swt = "!sh -c \"git switch -t $(git branch -r --format \"%(refname:lstrip=2)\" | peco)\""
	st = status -sb
	pd = push --delete
	c = commit
	a = add
	al = add .
	au = add -u
	ap = add -p
	b = branch
	ba = branch -a
	bm = branch -a --merged
	d = diff
	ds = diff --staged
	l = log
	lo = log --oneline --graph
	ls = log --stat
	lp = log -p
	ru = remote update --prune
	gn = grep -n
	rh = reset HEAD^
	ri = !sh -c 'git rebase -i HEAD~$0'
	gsub = "!sh -c 'git grep -l $0 $2 | xargs sed -i \"s/$0/$1/g\"'"
	cb = "!sh -c 'git branch --merged master | grep -v master | grep -v \"*\" | xargs git branch -d'"
	wip = commit --allow-empty -m 'wip'
	cot = "!sh -c 'git branch --remote | peco | xargs git checkout -t'"
[log]
	date = iso
[github]
	user = kenchan
[help]
	autocorrect = 1
[pull]
	rebase = true
[credential]
	helper = store
[fetch]
	prune = true
[commit]
	verbose = true
[ghq]
	root = ~/src
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[include]
	path = ~/.config/git/config.local
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[pager]
	branch = cat
	diff = delta
	log = delta
	reflog = delta
	show = delta
[merge]
	conflictStyle = diff3
[url "git@github.com:"]
	pushInsteadOf = "https://github.com/"
[init]
	defaultBranch = main
[ghq "https://git.pepabo.com/"]
	vcs = git
[delta]
	plus-style = "syntax #012800"
	minus-style = "syntax #340001"
	syntax-theme = Monokai Extended
	navigate = true
	line-numbers = true
[interactive]
	diffFilter = delta --color-only

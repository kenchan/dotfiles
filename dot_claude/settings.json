{
  "permissions": {
    "additionalDirectories": [
      "/tmp"
    ],
    "allow": [
      "Bash(bundle:*)",
      "Bash(chezmoi:*)",
      "Bash(docker:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(go:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mise:*)",
      "Bash(mkdir:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pip:*)",
      "Bash(pnpm:*)",
      "Bash(python:*)",
      "Bash(ruby:*)",
      "Bash(sed:*)",
      "Bash(sqlite3:*)",
      "Bash(tree:*)",
      "Bash(uv:*)",
      "Bash(uvx:*)",
      "Edit(**)",
      "MultiEdit(**)",
      "Write(**)",
      "WebFetch(*)",
      "mcp__gemini-cli__ask-gemini",
      "mcp__GHE",
      "mcp__playwright",
      "mcp__terraform"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"decision\": \"block\", \"reason\": \"Use gemini mcp instead of WebSearch\"}'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs sed -i -e '$a\\'"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path' | xargs sed -i 's/[[:space:]]*$//'"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true
  }
}
